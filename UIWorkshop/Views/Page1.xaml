<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIWorkshop.Views.Page1"
             Title="LayoutTraining">
    
    <VerticalStackLayout BackgroundColor="Aqua"
                         Margin="12,5"
                         MaximumHeightRequest="12">
        <Grid RowDefinitions="*,*,*"
              ColumnDefinitions="*,*">
            <Label Grid.Row="0"
                   Grid.Column="0" 
                   Grid.ColumnSpan="2"
                   Text="Welcome to .NET MAUI! 21"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Welcome to .NET MAUI! 21"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="Welcome to .NET MAUI! 21"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>
    </VerticalStackLayout>

   
</ContentPage>